<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8e8e8e">
    
<ImageView android:id="@+id/logo" android:layout_marginTop="10dp" android:layout_marginBottom="30dp" android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/logo"></ImageView>

<LinearLayout style="@style/homescreen_button_wrapper_style">
<Button style="@style/homescreen_button_style" android:id="@+id/LoginButton" android:text="LOGIN"></Button>
</LinearLayout>

<LinearLayout style="@style/homescreen_button_wrapper_style">
<Button style="@style/homescreen_button_style" android:id="@+id/CameraPreview" android:text="CAMERA"></Button>
</LinearLayout>

<LinearLayout style="@style/homescreen_button_wrapper_style">
<Button style="@style/homescreen_button_style" android:id="@+id/SightsButton" android:text="VIEW SIGHTS"></Button>
</LinearLayout>
 
<LinearLayout style="@style/homescreen_button_wrapper_style">
<Button style="@style/homescreen_button_style" android:id="@+id/MapButton" android:text="MAP"></Button>
</LinearLayout>

<Button android:text="Google Nav" android:id="@+id/NavButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
