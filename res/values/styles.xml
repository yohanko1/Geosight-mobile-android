<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="homescreen_button_style">
		<item name="android:layout_marginBottom">20dp</item>
		<item name="android:layout_weight">.85</item>
		<item name="android:typeface">sans</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">20dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:background">@drawable/homescreen_button</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">0dp</item>
	</style>
	
	<style name="homescreen_button_wrapper_style">
		<item name="android:orientation">horizontal</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:weightSum">1.0</item>
	</style>
</resources>
